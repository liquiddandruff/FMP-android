<resources>
	<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
		<item name="libraryListViewRow">@style/ListViewRow</item>
	</style>

	<style name="AppTheme.Light" parent="AppTheme">
		<item name="colorPrimary">@color/primary_light</item>
		<item name="colorPrimaryDark">@color/primary_light</item>
		<item name="libraryListView">@style/ListView.Light</item>
		<!-- http://www.materialpalette.com/indigo/light-blue
		<item name="colorPrimary">#3F51B5</item>
		<item name="colorPrimaryDark">#303F9F</item>
		<item name="colorAccent">#03A9F4</item>
		<item name="android:textColorPrimary">#212121</item>
		<item name="android:textColorSecondary">#727272</item>
		<item name="android:divider">#B6B6B6</item> -->
	</style>

	<style name="AppTheme.Dark" parent="AppTheme">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary</item>
		<item name="libraryListView">@style/ListView.Dark</item>
	</style>

	<style name="ListView" parent="android:Widget.DeviceDefault.ListView">
		<item name="android:paddingTop">5dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0dp</item>
		<item name="android:drawSelectorOnTop">true</item>
	</style>

	<style name="ListView.Light" parent="ListView">
		<item name="android:color">@color/list_view_light_default</item>
	</style>

	<style name="ListView.Dark" parent="ListView">
		<item name="android:background">@color/list_view_dark_default</item>
	</style>

	<style name="ListViewRow">
		<item name="android:padding">5dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@drawable/list_view_bg_dark</item>
	</style>

	<style name="WindowAnimationTransition">
		<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
		<item name="android:windowExitAnimation">@android:anim/fade_out</item>
	</style>
</resources>
